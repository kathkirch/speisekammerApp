<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white_opacy"
    >


<!--    xmlns:android="http://schemas.android.com/apk/res/android" -->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="match_parent">-->


        <TextView
            android:id="@+id/popUpNoBarcodeTextView"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:background="@drawable/title_style"
            android:padding="12dp"
            android:text="@string/no_barcodeproduct_input"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/popUpNoBarcodeInput_editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.99" />

        <EditText
            android:id="@+id/popUpNoBarcodeInput_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:hint="@string/hier_produkt_eingeben"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="text"
            android:autofillHints="@string/hier_produkt_eingeben">
        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_noBarcode"
            android:layout_width="84dp"
            android:layout_height="60dp"
            android:background="@drawable/add_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popUpNoBarcodeInput_editText"
            app:layout_constraintVertical_bias="0.05" />


</androidx.constraintlayout.widget.ConstraintLayout>

